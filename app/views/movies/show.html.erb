<div class="cover-show">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">映画メモ</h1>
    </div>
    <div class="row justify-content-center d-block">
      <p class="caption"><%= @movie.user.nickname %></p>
      <%= image_tag @movie.image, class: "img-fluid" %><br>
      <p class="caption"><%= @movie.title %></p>
      <h4>メモ</h4>
      <p id="text"><%= @movie.memo %></p>
      <h4>俳優</h4>
      <p id="text"><%= @movie.actor %></p>
      <h4>監督</h4>
      <p id="text"><%= @movie.director %></p>
      <h4>ジャンル</h4>
      <p id="text"><%= @movie.genre.name %></p>
      <h4>評価</h4>
      <p id="text"><%= @movie.evaluation.name %></p>
      <%= link_to '編集する', edit_movie_path(@movie.id), class: "btn btn-info mr-3" %>
      <%= link_to '削除する', movie_path(@movie.id), method: :delete, "data-confirm"=>"本当に消しますか？", class: "btn btn-danger" %><br>
      <%= link_to '投稿一覧ページへ', root_path, class: "btn btn-dark mt-3" %>
    </div>
  </div>
</div>