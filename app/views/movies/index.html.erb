<h1>映画一覧</h1>
<div class="container">
  <div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-lg-4">
      <%= image_tag movie.image, class: 'movie-image' %>
      <p class="title"><%= movie.title %></p>
      <div class="movie-genre">
        <%= movie.genre.name %>
      </div>
      <div class="movie-evaluation">
        <%= movie.evaluation.name %>
      </div>
    </div>
  </div>
  <% end %>
</div>