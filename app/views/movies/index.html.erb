 <!-- コンテンツ -->
<div class="container mb-5 py-3">
  <div class="row text-center pb-3">
    <div class="col m-5">
      <h2>映画メモ一覧</h2>
    </div>
  </div>
  <div class="container">
    <div class="row">
        <% @movies.each do |movie| %>
          <div class="card m-5" style="max-width: 540px;">
              <div class="row ">
                <div class="col-md-6">
                  <%= image_tag movie.image.variant(resize: '500x300'), class: 'movie-image' %>
                  <p class="m-3">引用:  <%= link_to movie.excerpt_site_name, movie.quote_source %></p>
                </div>
                <div class="col-md-6">
                  <div class="card-body">
                    <ul class="list-group list-group-flush">
                      <p class="text-center text-dark bg-light">タイトル</p>
                      <li class="list-group-item text-center bg-light"><%= movie.title %></li>
                      <%# <p class="text-center text-dark border border-dark">ジャンル</p>
                      <li class="list-group-item text-center"><%= movie.genre.name %>
                      <p class="text-center text-dark bg-light">個人的評価</p>
                      <li class="list-group-item text-center bg-light"><%= movie.evaluation.name %></li>
                      <li class="list-group-item text-center"><%=link_to "by #{movie.user.nickname}", user_path(movie.user.id), method: :get%></li>
                    </ul>
                    <div class="card-body text-center">
                        <%= link_to "詳細", movie_path(movie.id), method: :get, class: "btn btn-primary" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        <% end %>
      </div>
      <%= paginate @movies, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>
