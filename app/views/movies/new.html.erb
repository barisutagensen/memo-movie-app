<div class="container">
  <div class="row text-center m-4">
   <div class="col-6">
     <h1>映画メモ</h1>

      <%= form_with model: @movie, local:true do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
        <div >
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, placeholder: "映画タイトル", class: "form-control" %>
        </div>
        <div >
          <%= f.label :image, "イメージ" %><br>
          <%= f.file_field :image %>
        </div>
        <div >
          <%= f.label :quote_source, "イメージ引用元URL" %>
          <%= f.text_field :quote_source, placeholder: "URL", class: "form-control" %>
        </div>
        <div >
          <%= f.label :excerpt_site_name, "引用元サイト名" %>
          <%= f.text_field :excerpt_site_name, placeholder: "サイト名", class: "form-control" %>
        </div>
        <div >
          <%= f.label :memo, "メモ" %>
          <%= f.text_field :memo, placeholder: "メモ", class: "form-control" %>
        </div>
        <div >
          <%= f.label :actor, "俳優" %>
          <%= f.text_field :actor, placeholder: "俳優名", class: "form-control" %>
        </div>
        <div >
          <%= f.label :director, "監督" %>
          <%= f.text_field :director, placeholder: "監督名", class: "form-control" %>
        </div>
        <div >
          <%= f.label :viewing_timing, "鑑賞した時期" %>
          <%= f.text_field :viewing_timing, placeholder: "２０１５年頃", class: "form-control" %>
        </div>
        <div >
          <%= f.label :genre_id, "ジャンル" %>
          <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"form-control"}) %>
        </div>
        <div >
          <%= f.label :evaluation_id, "個人的評価" %>
          <%= f.collection_select(:evaluation_id, Evaluation.all, :id, :name, {}, {class:"form-control"}) %>
        </div>
        <%= f.submit 'メモる', class: "btn btn-success rounded-pill px-5" %>
      <% end %>
    </div>
  </div>
</div>