<!DOCTYPE html>
<html lang="ja">
  <head>
    <title>MemoMovieApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/43307631a0.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <%# ヘッダー %>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <%= link_to "MemoMovie", root_path, class:"navbar-brand" %>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <% if user_signed_in? %>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
              <div class="navbar-nav">
                <%= link_to "ログアウト", destroy_user_session_path, class:"nav-link" %>
                <%= link_to "映画メモる", new_movie_path, class:"nav-link" %>
              </div>
            </div>
          <% else%>
              <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                  <%= link_to "ログイン", new_user_session_path, class:"nav-link" %>
                  <%= link_to "新規登録", new_user_registration_path, class:"nav-link" %>
                </div>
              </div>
          <% end %>
        </div>
      </nav>
    </header>
    <%= yield %>
    <%# //フッター %>
    <footer class="footer">
      <div class="container">
        <p class="text-muted">Place sticky footer content here.</p>
      </div>
    </footer>
    


  </body>
</html>
